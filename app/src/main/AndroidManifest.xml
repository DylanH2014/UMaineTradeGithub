<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".abhinav.dylan.umainetrade.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".abhinav.dylan.umainetrade.Signup"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".example.dylan.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".example.dylan.EmbeddedBook" />
        <activity android:name=".abhinav.dylan.umainetrade.ListingsPage"></activity>
        <activity android:name=".abhinav.dylan.umainetrade.AddListings"></activity>
        <activity
            android:name=".abhinav.dylan.umainetrade.ItemSummary"
            android:label="@string/title_activity_item_summary"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
